source "$XDG_CONFIG_HOME/bash/completion.sh" #autocompletion de bash
source "$XDG_CONFIG_HOME/bash/color.sh" #alias collorÃÂ©s
source "$XDG_CONFIG_HOME/bash/prompt.sh" #prompt collorÃÂ©
