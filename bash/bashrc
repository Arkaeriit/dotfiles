source "$XDG_CONFIG_HOME/bash/setting.sh" #paramÃÂ¨tres perso comme l'ÃÂ©diteur
source "$XDG_CONFIG_HOME/bash/startup.sh" #programes ÃÂ  dÃÂ©marer automatiquement


export QSYS_ROOTDIR="/mnt/m.2_1/altera/15.0/quartus/sopc_builder/bin"
export ALTERAOCLSDKROOT="/mnt/m.2_1/altera/15.0/hld"
