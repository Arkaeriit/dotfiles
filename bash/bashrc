__tcli-port () {
    case $1 in
        1)
            echo 9090;;
        2)
            echo 9091;;
        3)
            echo 9092;;
        4)
            echo 9093;;
        5)
            echo 9094;;
        6)
            echo 9095;;
        7)
            echo 9096;;
        8)
            echo 9097;;
        9)
            echo 9098;;
        *)
            echo 9099;;
    esac
}

tcli () {
    if [ -n "$3" ]
    then
        dir="$3"
    else
        dir="tmp"
    fi
    transmission-cli -w "$dir/" -M -p $(__tcli-port "$1") "$2"
}

alias arrakis-connect="sshfs -o IdentityFile=/home/maki/.ssh/id_ed25519 -o allow_other -p 2255 maki@arrakis.bobignou.red:/mnt/hdd2/data/maki/Video/ /home/maki/ssh-arrakis/"
alias caen-connect="sshfs -o IdentityFile=/home/maki/.ssh/id_ed25519 -o allow_other ark@152.70.194.64:/home/ark/seed /home/maki/ssh-caen/"

